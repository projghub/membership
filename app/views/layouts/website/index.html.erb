<html>
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= full_title(yield(:title)) %></title>
    <%= stylesheet_link_tag 'website', media: 'all' %>
    <%= yield :stylesheet_includes %>
    <%= javascript_include_tag 'website' %>
    <%= yield :javascript_includes %>
    <%= csrf_meta_tags %>
    <%= render 'shared/shim' %>
    <link rel="stylesheet" type="text/css" href="//cdn.jsdelivr.net/foundation/4.3.1/css/foundation.min.css" />
    <script src="//cdn.jsdelivr.net/foundation/4.3.1/js/foundation.min.js"></script>
  </head>
<body>
  <%= render 'shared/google_analytics' %>
  <div class="wrapper">
    <%= render 'layouts/website/header' %>
    <%= render 'shared/flash_messages' %>
    <div class="container">
      <%= yield %>
    </div>
    <%= render 'layouts/website/footer' %>
  </div>
</body>
</html>
