<%- model_class = Admin::Event -%>
<%- provide(:title, t('.title')) -%>
<%- provide(:navigation_highlight, 'tools') -%>

<div class="row">
  <div class="large-12 columns">
    <dl class="dl-horizontal">
      <dt><strong><%= model_class.human_attribute_name(:name) %></strong></dt>
      <dd><%= @admin_event %></dd>
    </dl>

    <h3>Speakers</h3>
    <ul>
      <% @admin_event.speakers.each do |speaker| %>
        <li><%= link_to speaker, admin_speaker_path(speaker) %></li>
      <% end %>
    </ul>

    <%= admin_show_actions(:admin, :event, :events, @admin_event) %>
  </div>
</div>
