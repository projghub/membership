<div class="row">
  <div class="large-12 columns">
    <%= form_for @admin_event do |f| %>
      <%= render 'shared/error_messages', target: @admin_event %>
      <div class="row">
        <div class="large-6 columns">
          <div class="row">
            <div class="large-12 columns">
              <%= f.label :name %>
              <%= f.text_field :name %>
            </div>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="large-6 columns">
          <div class="row">
            <div class="large-12 columns">
              <%= f.label :speakers %>
              <%= hidden_field_tag "admin_event[speaker_ids][]", nil %>
              <% Admin::Speaker.all.each do |speaker| %>
                <%= check_box_tag "admin_event[speaker_ids][]", speaker.id, @admin_event.speaker_ids.include?(speaker.id), id: dom_id(speaker) %>
                <%= speaker %><br />
              <% end %>
            </div>
          </div>
        </div>
      </div>

      <%= admin_form_actions(f, :admin, :events) %>
    <% end %>
  </div>
</div>
