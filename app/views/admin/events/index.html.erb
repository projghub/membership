<%- model_class = Admin::Event -%>
<%- provide(:title, t('event.title')) -%>
<%- provide(:navigation_highlight, 'tools') -%>

<div class="row">
  <div class="large-12 columns">
    <%= new_button(:admin, :event, :zurb) %>
    <%= render 'shared/filter' %>
    <%= render 'search' %>
    <%= will_paginate(@admin_events) %>

    <table>
      <thead>
        <tr>
          <th><%= model_class.human_attribute_name(:name) %></th>
          <th><%= model_class.human_attribute_name(:created_at) %></th>
          <th><%=t '.actions', default: t('helpers.actions') %></th>
        </tr>
      </thead>
      <tbody>
        <% @admin_events.each do |event| %>
          <tr>
            <td><%= link_to event, admin_event_path(event) %></td>
            <td><%=l event.created_at, format: :created_at_date %></td>
            <td>
              <%= mini_edit_button(:admin, :event, event, :zurb) %>
              <%= mini_destroy_button(:admin, :event, event, :zurb) %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
