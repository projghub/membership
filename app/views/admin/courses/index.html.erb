<%- model_class = Admin::Course -%>
<%- provide(:title, t('.title')) -%>
<%- provide(:navigation_highlight, 'tools') -%>

<div class="row">
  <div class="large-12 columns">
    <%= new_button(:admin, :course, :zurb) %>
    <%= render 'shared/filter' %>
    <%= render 'search' %>
    <%= will_paginate(@admin_courses) %>

    <table>
      <thead>
        <tr>
          <th><%= model_class.human_attribute_name(:name) %></th>
          <th><%= model_class.human_attribute_name(:created_at) %></th>
          <th><%=t '.actions', default: t('helpers.actions') %></th>
        </tr>
      </thead>
      <tbody>
        <% @admin_courses.each do |course| %>
          <tr>
            <td><%= link_to course, admin_course_path(course) %></td>
            <td><%=l course.created_at, format: :created_at_date %></td>
            <td>
              <%= mini_edit_button(:admin, :course, course, :zurb) %>
              <%= mini_destroy_button(:admin, :course, course, :zurb) %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
