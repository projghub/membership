<%- model_class = Admin::Speaker -%>
<%- provide(:title, t('.title')) -%>
<%- provide(:navigation_highlight, 'tools') -%>

<div class="row">
  <div class="large-12 columns">
    <dl class="dl-horizontal">
      <dt><strong><%= model_class.human_attribute_name(:name) %></strong></dt>
      <dd><%= @admin_speaker %></dd>
    </dl>

    <h3>Courses</h3>
    <ul>
      <% @admin_speaker.courses.each do |course| %>
        <li><%= link_to course, admin_course_path(course) %></li>
      <% end %>
    </ul>

    <h3>Events</h3>
    <ul>
      <% @admin_speaker.events.each do |event| %>
        <li><%= link_to event, admin_event_path(event) %></li>
      <% end %>
    </ul>

    <%= admin_show_actions(:admin, :speaker, :speakers, @admin_speaker) %>
  </div>
</div>
