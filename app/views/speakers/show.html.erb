<%- model_class = Speaker -%>
<%- provide(:title, t('.title')) -%>
<%- provide(:navigation_highlight, 'tools') -%>

<div class="row">
  <div class="large-12 columns">
    <dl class="dl-horizontal">
      <dt><strong><%= model_class.human_attribute_name(:name) %></strong></dt>
      <dd><%= @speaker %></dd>
    </dl>
  </div>
</div>

<div class="row">
  <div class="large-12 columns">
    <h3>Courses</h3>
    <ul>
      <% @speaker.courses.each do |course| %>
        <li><%= link_to course, course_path(course) %></li>
      <% end %>
    </ul>
  </div>
</div>

<div class="row">
  <div class="large-12 columns">
    <h3>Events</h3>
    <ul>
      <% @speaker.events.each do |event| %>
        <li><%= link_to event, event_path(event) %></li>
      <% end %>
    </ul>
  </div>
</div>
